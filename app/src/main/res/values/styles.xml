<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CandyChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="strokeWidth" >2dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="backgroundColor">@color/chip_background_color</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="CandyStyleButton">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/button_background_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="strokeColor">@color/black</item>
        <item name="backgroundColor">@color/chip_background_color</item>
    </style>

</resources>